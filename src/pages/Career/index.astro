---
import Layout from "../../layouts/Layout.astro";
import Timeline from "../../components/Timeline.astro";
import Hero from "../../components/Hero.astro";

const unis = [
    {
        date : "July 2024",
        title : "Web Developer Intern at Wevioo - Tunis Tunisia",
        desc : "Built a reusable front-end component library in Bootstrap to standardize and speed up landing page creation in Joget (low-code platform). Delivered production-ready and reusable code that helped improve the page productivity of a 15 person team by 30%",
        website: "https://www.wevioo.com/en"
    },
    {
        date : "June 2025 - September 2025",
        title : "Software Engineer Intern at Microsoft - Dublin Ireland",
        desc : "Led the development of a new upsell page in the Office redemption flow  (React, TypeScript, C#, .NET) used daily by hundreds of thousands of users worldwide. Handled full-stack implementation, UX integration, and service-layer logic. Owned all cross-functional communication: legal reviews, privacy compliance, UX validation, and product alignment. Pushed code to production, contributing to improved conversion and user engagement.",
        website : "https://www.microsoft.com/en-ie/aboutireland",
    },
];


const heroData = {title: "Career"};

---

<script>
    const activePage = document.getElementById("career");
    activePage?.setAttribute('class', 'block py-2 px-3 text-white bg-blue-700 rounded-sm md:bg-transparent md:text-blue-700 md:p-0 dark:text-white md:dark:text-blue-500');
    activePage?.setAttribute("aria-current" ,"page");
</script>

<Layout>
    <Hero title={heroData.title} />
    <Timeline events={unis.reverse()}/>
</Layout>