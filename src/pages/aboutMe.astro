---
import Layout from "../layouts/Layout.astro";

const name = "Selim Ben Bouzid";
const introduction = "Lorem ipsum dolor sit amet consectetur adipisicing elit. Molestiae esse aliquam nihil ad omnis unde hic, nostrum veniam excepturi commodi veritatis, tempora ea eos, mollitia cupiditate itaque facilis nulla iure."
const email = "benbouzid.selim@gmail.com";
const phonePrefix = "+33";
const phoneNumber = "7 603 888 13";
const gitHub = "Seloum-lab";
const address = "20 Av Albert Einstein, Lyon";
const linkedIn = "selim-ben-bouzid";
---
<script>
    const activePage = document.getElementById("about-me");
    activePage?.setAttribute('class', 'block py-2 px-3 text-white bg-blue-700 rounded-sm md:bg-transparent md:text-blue-700 md:p-0 dark:text-white md:dark:text-blue-500');
    activePage?.setAttribute("aria-current" ,"page");
</script>

<Layout>
    <div class="flex flex-row items-center justify-between w-full max-w-7xl mx-auto px-8 py-12">
        <!-- Texte à gauche -->
        <div class="max-w-xl">
            <h1 class="text-5xl lg:text-6xl font-extrabold tracking-tight text-gray-900 dark:text-white mb-4">
                {name}
            </h1>
            <p class="text-lg lg:text-xl text-gray-500 dark:text-gray-400">
                {introduction}
            </p>
        </div>

        <!-- Image à droite avec infos de contact -->
        <div class="ml-8 flex flex-col items-center">
            <img src="Portrait.jpg" alt="Portrait de Selim Ben Bouzid" class="w-64 h-auto rounded-lg shadow-lg mb-4">

            <!-- Liens sociaux -->
            <div class="flex space-x-4 mb-4">
                <!-- GitHub -->
                <a href={"https://github.com/" + gitHub} target="_blank" class="text-gray-500 hover:text-gray-900 dark:hover:text-white">
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 .5C5.7.5.5 5.7.5 12c0 5.1 3.3 9.4 7.9 10.9.6.1.8-.3.8-.6v-2c-3.2.7-3.8-1.5-3.8-1.5-.5-1.2-1.1-1.5-1.1-1.5-.9-.6.1-.6.1-.6 1 .1 1.6 1 1.6 1 .9 1.6 2.4 1.1 3 .8.1-.6.4-1.1.7-1.3-2.6-.3-5.3-1.3-5.3-5.8 0-1.3.5-2.3 1.2-3.2-.1-.3-.5-1.6.1-3.3 0 0 1-.3 3.3 1.2.9-.2 1.8-.3 2.7-.3s1.8.1 2.7.3c2.3-1.6 3.3-1.2 3.3-1.2.6 1.7.2 3 .1 3.3.8.9 1.2 1.9 1.2 3.2 0 4.5-2.7 5.5-5.3 5.8.4.3.8.9.8 1.9v2.8c0 .3.2.7.8.6 4.6-1.5 7.9-5.8 7.9-10.9C23.5 5.7 18.3.5 12 .5z"/>
                    </svg>
                </a>

                <!-- LinkedIn -->
                <a href={"https://www.linkedin.com/in/" + linkedIn} target="_blank" class="text-gray-500 hover:text-gray-900 dark:hover:text-white">
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M19 0h-14c-2.76 0-5 2.24-5 5v14c0 2.76 2.24 5 5 5h14c2.75 0 5-2.24 5-5v-14c0-2.76-2.25-5-5-5zm-11 19h-3v-9h3v9zm-1.5-10.3c-.97 0-1.75-.78-1.75-1.75s.78-1.75 1.75-1.75 1.75.78 1.75 1.75-.78 1.75-1.75 1.75zm13.5 10.3h-3v-4.5c0-1.08-.02-2.46-1.5-2.46-1.5 0-1.73 1.17-1.73 2.38v4.58h-3v-9h2.88v1.23h.04c.4-.75 1.38-1.54 2.84-1.54 3.04 0 3.6 2 3.6 4.59v4.72z"/>
                    </svg>
                </a>

                <!-- Email -->
                <a href={"mailto:" + email} class="text-gray-500 hover:text-gray-900 dark:hover:text-white">
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 13.065L.8 4h22.4L12 13.065zM0 5.066V20h24V5.066l-12 9.6-12-9.6z"/>
                    </svg>
                </a>
            </div>

            <!-- Coordonnées -->
            <div class="text-gray-600 dark:text-gray-300 text-sm space-y-2">
                <div class="flex items-center space-x-2">
                    <!-- Téléphone -->
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M6.62 10.79a15.91 15.91 0 006.59 6.59l2.2-2.2a1 1 0 011.11-.27c1.2.48 2.5.74 3.83.74a1 1 0 011 1v3.5a1 1 0 01-1 1A17.92 17.92 0 013 5a1 1 0 011-1h3.5a1 1 0 011 1c0 1.33.26 2.63.74 3.83a1 1 0 01-.27 1.11l-2.2 2.2z"/>
                    </svg>
                    <span>{phonePrefix + " " + phoneNumber}</span>
                </div>

                <div class="flex items-center space-x-2">
                    <!-- Adresse -->
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2C8.1 2 5 5.1 5 9c0 5.2 7 13 7 13s7-7.8 7-13c0-3.9-3.1-7-7-7zm0 9.5c-1.4 0-2.5-1.1-2.5-2.5S10.6 6.5 12 6.5s2.5 1.1 2.5 2.5S13.4 11.5 12 11.5z"/>
                    </svg>
                    <span>{address}</span>
                </div>
            </div>
        </div>
    </div>
</Layout>
