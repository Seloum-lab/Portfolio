---
import Layout from "../layouts/Layout.astro";
import Timeline from "../components/Timeline.astro";
import Hero from "../components/Hero.astro";

const unis = [
    {date : "September 2025", title : "Internship ", desc : "Description of internship", website: "zejnciz.com"},
    {date : "September 2025", title : "Junior SWE", desc : "Description of INSA Lyon"},
];


const heroData = {title: "Career"};

---

<script>
    const activePage = document.getElementById("career");
    activePage?.setAttribute('class', 'block py-2 px-3 text-white bg-blue-700 rounded-sm md:bg-transparent md:text-blue-700 md:p-0 dark:text-white md:dark:text-blue-500');
    activePage?.setAttribute("aria-current" ,"page");
</script>

<Layout>
    <Hero title={heroData.title} />
    <Timeline events={unis}/>
</Layout>